border-1px($color)
  position relative
  &::after
    content: '';
    display:block;
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    border-bottom: 1px solid $color;
    transform: scaleY(0.5);

box-sizing-norm()
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;

page-css()
  min-height: 100%;
  background-color: #f4f4f4;

padding-top-bottom-10px()
  padding-top 10px
  padding-bottom 10px

font-size-16px()
  font-size 16px

font-size-14px()
  font-size 14px

font-size-12px()
  font-size 12px
